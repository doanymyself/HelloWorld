<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- ActionBar 的颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏（StatusBar）的颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--染色控件（tinted widgets）的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Activity主题 -->
    <style name="activityTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- 自定义对话框 -->
    <style name="MyCustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 自定义对话框 -->
    <style name="CustomDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- popupwindow进出动画 -->
    <style name="popupwindow_anim">
        <item name="android:windowEnterAnimation">@anim/publishtopic_popup_in</item>
        <item name="android:windowExitAnimation">@anim/publishtopic_popup_out</item>
    </style>
</resources>
